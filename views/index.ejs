<!DOCTYPE html>
<html>
<head>
	<!--  Meta information and responsive  -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!--  Bootstrap  -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

	<!-- Axios for making the network call's -->
	<script defer type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js" ></script>

	<!-- Customization -->
	<link rel="stylesheet" type="text/css" href="/styles/index.css">

	<!-- Title -->
	<title>BMI</title>
</head>
<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col jumbotron">
				<h1>Patient's BMI Information</h1>
			</div>
		</div>
		<div class="row card-container">
		    <div class="col cards">
		    	<h6>Total Patients</h6>
		    	<div>
		    		<div class="row count-spinner">
						<div class="col spinner-center">
							<div class="spinner-border" role="status">
							  <span class="visually-hidden">Loading...</span>
							</div>
						</div>
					</div>
		    		<h5 class="count" id="total_users">4000</h5>
		    	</div>
		    </div>
		    <div class="col cards">
		    	<h6>No.Of Underweight Patients</h6>
		    	<div>
		    		<div class="row count-spinner">
						<div class="col spinner-center">
							<div class="spinner-border" role="status">
							  <span class="visually-hidden">Loading...</span>
							</div>
						</div>
					</div>
		    		<h5 class="count" id="underweight_patient">4000</h5>
		    	</div>
		    </div>
		    <div class="col cards">
		    	<h6>No.Of Normal weight Patients</h6>
		    	<div>
		    		<div class="row count-spinner">
						<div class="col spinner-center">
							<div class="spinner-border" role="status">
							  <span class="visually-hidden">Loading...</span>
							</div>
						</div>
					</div>
		    		<h5 class="count" id="normal_patient">4000</h5>
		    	</div>
		    </div>
		    <div class="col cards">
		    	<h6>No.Of Overweight Patients</h6>
		    	<div>
		    		<div class="row count-spinner">
						<div class="col spinner-center">
							<div class="spinner-border" role="status">
							  <span class="visually-hidden">Loading...</span>
							</div>
						</div>
					</div>
		    		<h5 class="count" id="overweight_patient">4000</h5>
		    	</div>
		    </div>
		</div>
		<div class="row card-container">
		    <div class="col cards">
		    	<h6>No.Of Moderately Patients</h6>
		    	<div>
		    		<div class="row count-spinner">
						<div class="col spinner-center">
							<div class="spinner-border" role="status">
							  <span class="visually-hidden">Loading...</span>
							</div>
						</div>
					</div>
		    		<h5 class="count" id="moderate_patient">4000</h5>
		    	</div>
		    </div>
		    <div class="col cards">
		    	<h6>No.Of Severely obese Patients</h6>
		    	<div>
		    		<div class="row count-spinner">
						<div class="col spinner-center">
							<div class="spinner-border" role="status">
							  <span class="visually-hidden">Loading...</span>
							</div>
						</div>
					</div>
		    		<h5 class="count" id="severely_patient">4000</h5>
		    	</div>
		    </div>
		    <div class="col cards">
		    	<h6>No.Of Very severely Patients</h6>
		    	<div>
		    		<div class="row count-spinner">
						<div class="col spinner-center">
							<div class="spinner-border" role="status">
							  <span class="visually-hidden">Loading...</span>
							</div>
						</div>
					</div>
		    		<h5 class="count" id="very_severely_patient">4000</h5>
		    	</div>
		    </div>
		</div>
		<hr/>
		<div class="heading">
			<h4>BMI</h4>
		</div>
		<hr/>
		<form class="row">
			<h5>Filter's</h5>
			<div class="col">
				<input type="text" class="form-control" placeholder="Search by name" name="username">
			</div>
			<div class="col">
				<select class="form-select" aria-label="Default select example">
					<option value="">BMI Category</option>
					<% searchConfig.forEach( (filter) => { %>
						<option value="<%= filter.key %>"><%= filter.label %></option>
					<% }) %>
				</select>
			</div>
			<div class="col button-container">
				<input type="button" class="btn btn-outline-success" value="Search" />
				<input type="reset" class="btn btn-outline-danger" value="Reset" />
			</div>
		</form>
		<hr/>
		<div class="table-responsive">
			<table class="table table-bordered">
				<thead>
				    <tr>
				      <th scope="col">S.no</th>
				      <th scope="col">Name</th>
				      <th scope="col">Age</th>
				      <th scope="col">Gender</th>
				      <th scope="col">Height (Meter)</th>
				      <th scope="col">Weight (Kg)</th>
				      <th scope="col">BMI</th>
				      <th scope="col">BMI Category</th>
				      <th scope="col">Health Risk</th>
				    </tr>
				</thead>
				<tbody id="table-body">
					<tr id="table-spinner-container">
						<td colspan="9">					
							<div class="row">
								<div class="col spinner-center">
									<div class="spinner-border" role="status">
									  <span class="visually-hidden">Loading...</span>
									</div>
								</div>
							</div>
						</td>
					</tr>
				</tbody>
			</table>
		</div>

		<!-- 
			<div class="row">
				<div class="col spinner-center">
					<div class="spinner-border" role="status">
					  <span class="visually-hidden">Loading...</span>
					</div>
				</div>
			</div> 
		-->
	</div>
</body>
<script defer type="text/javascript" src="/js/index.js" ></script>
</html>